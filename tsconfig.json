{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [
      "vite/client",  // Untuk import.meta.glob
      "node"  // Tambah ini untuk process.env atau globals Node
    ],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true  // Tambah ini kalau import .tsx error
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx"  // Lebih spesifik ke js folder (kalau resources/**/*.tsx terlalu broad)
  ],
  "exclude": ["node_modules"]
}